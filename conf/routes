# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Players
GET     /player                     controllers.PlayerController.getPlayers
GET     /player/:id                 controllers.PlayerController.getPlayer(id: Int)
POST    /player/add                 controllers.PlayerController.addPlayer()

# Static endpoints for testing
GET     /expectedEloChange          controllers.Static.expectedEloChange(ratingA: Option[Int], ratingB: Option[Int], score: Option[Double])

# Static Assets
GET     /static/*file               controllers.Assets.at(path="/public", file)

